@model IEnumerable<UserAccounts.Entities.UserAccount>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
   
    <a href="~/UserAccounts/Create" class="btn btn-primary">Skapa en ny</a>
</p>
<div class="generic-container">
    <div class="panel panel-default">

        <div class="panel-heading"><span class="lead">Användarkonton</span></div>
        <div class="formcontainer table-responsive">
            <table class="table">
                <tr class="active">
                    <th>
                        @Html.DisplayNameFor(model => model.account.name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.department.name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.municipality)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.account.name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.department.name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.municipality)
                        </td>
                        <td>
                            <a href="@string.Format("UserAccounts/Edit/{0}",item.id)" class="btn btn-success">Edit</a>

                            <a href="@string.Format("UserAccounts/Details/{0}",item.id)" class="btn btn-success">Detaljer</a>
                            <a href="@string.Format("UserAccounts/Delete/{0}",item.id)" class="btn btn-danger">Ta bort</a>
                         
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>